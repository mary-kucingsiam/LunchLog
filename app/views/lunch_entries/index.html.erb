<p id="notice"><%= notice %></p>

<h1>Lunch Entries</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Food name</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lunch_entries.each do |lunch_entry| %>
      <tr>
        <td><%= lunch_entry.date %></td>
        <td><%= lunch_entry.title %></td>
        <td><%= lunch_entry.food_name %></td>
        <td><%= lunch_entry.author %></td>
        <td><%= link_to 'Show', lunch_entry %></td>
        <td><%= link_to 'Edit', edit_lunch_entry_path(lunch_entry) %></td>
        <td><%= link_to 'Destroy', lunch_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

